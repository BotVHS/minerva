# Minerva Environment Variables
# Copy this file to .env and update with your values

# MongoDB Configuration
MONGODB_ROOT_PASSWORD=changeme_root_password
MONGODB_USER=minerva_app
MONGODB_PASSWORD=changeme_app_password

# CORS Origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:4200,https://minerva.yourdomain.gov

# Mongo Express (Optional - for development)
MONGOEXPRESS_USER=admin
MONGOEXPRESS_PASSWORD=changeme_mongoexpress

# JWT Configuration (set in production)
# JWT_ISSUER=https://minerva.yourdomain.gov

# Security Settings
# MAX_FAILED_ATTEMPTS=5
# LOCKOUT_DURATION=1800
# ACCESS_TOKEN_DURATION=300
# REFRESH_TOKEN_DURATION=86400
